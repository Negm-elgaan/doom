#include <iostream>
 
using namespace std;
 
int main()
{
 int x,y=0,z=0,b=0,c=0,i=1;
 cin>>x;
 int arr[x];
 for(i=0; i<x; i++){
    cin>>arr[i];
 }
 for(i=0; i<x; i++){
    if(arr[i]%2==0){
        y++;
        b=i+1;
    }else{
    z++;
    c=i+1;
    }
 
 }
  if(z>y){
        cout<<b;
    }else if(z<y){
    cout<<c;
    }
    return 0;
}