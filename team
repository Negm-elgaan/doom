#include <iostream>

using namespace std;

int main()
{
    short x,a=0,b=0;
    cin>>x;
    while(x--){
            short y;
            short arr[y];
        for(int i=0; i<3; i++){
            cin>>arr[i];
        }
        for(int i=0; i<3; i++){
            a+=arr[i];
        }
        if(a>1){
                b++;
                a=0;
        }else{
        a=0;
        }
    }
    cout<<b;
    return 0;
}

